<h1 style="text-align:center; padding: 40px">{{title}}</h1>

<div
  class="movie-list"
  style="
  display: flex;
  justify-content: space-around;
  padding-bottom: 30px;
  "
>
  {{#each movies}}
    <div class="card" style="width: 18rem; align-items: center">
      <img
        src="{{this.img}}"
        class="card-img-top"
        alt="..."
        style="height:400px"
      />
      <div
        class="card-body"
        style="display: flex; flex-direction:column; justify-content:space-between; "
      >
        <h5 class="card-title" style="text-align:center">{{this.name}}</h5>
        <p class="card-text">{{this.description}}</p>
        <a href="/movies/{{this.id}}" class="btn btn-primary">Details</a>
      </div>
    </div>
  {{/each}}
</div>